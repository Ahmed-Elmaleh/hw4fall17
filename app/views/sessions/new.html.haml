%h1 Login

= form_tag login_create_path do

  = label :user, :user_id, 'User ID'
  = text_field :user, 'user_id', :id => 'loginUser'

  = label :movie, :email, 'E-mail'
  = text_field :user, 'email', :id => 'loginEmail'

  = submit_tag 'Login to my account', :id => 'loginSubmit'
<br>
= link_to 'Sign-up for an account', new_user_path, :id => 'loginSignup'
